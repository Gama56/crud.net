@model CrudProject1.Models.ViewModels.ClienteViewModel
@{  
 ViewBag.Title = "Editar";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Editar", "Cliente", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.Nit)
                @Html.TextBoxFor(d => d.Nit, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nit, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Nombre)
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Apellido)<br />
                @Html.EditorFor(d => d.Apellido, "", new { @class = "form-control" }) 
                @Html.ValidationMessageFor(d => d.Apellido, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Edad)<br />
                @Html.EditorFor(d => d.Edad, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Edad, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Fecha)<br />
                @Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
            </div>
            <br />
            <div style="text-align:right;">
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>

    </div>
}
